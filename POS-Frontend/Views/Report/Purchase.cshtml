<script>
    $(document).ready(function() {
        // Ambil semua tombol toggle
        const toggleButtons = document.querySelectorAll(".toggle");

        toggleButtons.forEach(button => {
            button.addEventListener("click", function () {
                // Cari parent row dan child row terkait
                const parentRow = this.closest(".parent-row");
                const childRow = parentRow.nextElementSibling;

                // Toggle visibility child row
                if (childRow.style.display === "none") {
                    childRow.style.display = "table-row"; // Expand
                    this.querySelector(".toggle-off").style.display = "none";
                    this.querySelector(".toggle-on").style.display = "inline-block";
                } else {
                    childRow.style.display = "none"; // Collapse
                    this.querySelector(".toggle-off").style.display = "inline-block";
                    this.querySelector(".toggle-on").style.display = "none";
                }
            });
        });
    })
</script>